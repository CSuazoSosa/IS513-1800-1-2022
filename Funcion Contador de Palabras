//#include <iostream>
//#include <stdlib.h>
//using namespace std;
int main(){
 
string palabra =" ";
int cont_palabra = 0;
 
cout<<"Ingrese una frase o palabra: ";getline(cin,palabra);
for(int i=0; i<palabra.size(); i++){
	if(i!=palabra.size()-1){
		if(palabra[i] == ' ' && palabra[i+1] != ' '){
			cont_palabra++;
		}
	}
}
 
cout<<"La cantidad de palabras es: "<<cont_palabra+1;
 
return 0;
}
